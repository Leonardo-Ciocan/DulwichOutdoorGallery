<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team3m.dulwichoutdoorgallery.RouteActivity$PlaceholderFragment">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="170dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <android.support.v7.widget.CardView
        android:id="@+id/currentArt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="-5dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="-5dp"
        cardBackgroundColor="#4f000000"
        android:layout_marginBottom="-80dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
               android:alpha="0"
                android:scaleX="2"
                android:scaleY="2"
                android:id="@+id/artCardImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerInside"
                android:background="@drawable/reka_europa_and_the_bull"/>

            <LinearLayout
                android:background="#df000000"
                android:layout_width="match_parent"
                android:layout_height="300dp">

            </LinearLayout>

            <ImageView
                android:id="@+id/smallImage"
               android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/reka_europa_and_the_bull"/>
            <TextView
                android:layout_marginTop="5dp"

                android:layout_marginLeft="110dp"
                android:textSize="13pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Reka europa"/>
            <TextView
                android:layout_marginTop="45dp"

                android:layout_marginLeft="110dp"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="This is some long text here. It is is initially hidden beneath the other card."/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                android:textSize="20pt"/>

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/brand"
                    android:background="#00ffffff"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="INFO"/>

                <Button

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/brand"
                    android:background="#00ffffff"

                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="SHARE"/>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>
    
    <android.support.v7.widget.CardView
        android:id="@+id/navigationCard"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="-5dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="-25dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:textSize="14pt"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GRAND TOUR"/>
            <TextView
                android:textColor="#000"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-light"
                android:textSize="10pt"
                android:alpha="0.7"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1: First art piece"/>
            <team3m.dulwichoutdoorgallery.RouteProgressIndicator
                android:id="@+id/dotview"
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </team3m.dulwichoutdoorgallery.RouteProgressIndicator>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/navigateBtn"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/brand"
                    android:background="#00ffffff"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="NAVIGATE"/>

                <Button
                    android:id="@+id/shareBtn"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/brand"
                    android:background="#00ffffff"

                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="SHARE"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
