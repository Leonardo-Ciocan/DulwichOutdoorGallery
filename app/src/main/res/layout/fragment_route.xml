<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team3m.dulwichoutdoorgallery.RouteActivity$PlaceholderFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="195dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp">


        <fragment

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </android.support.v7.widget.CardView>


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="170dp"
        android:src="@drawable/ic_maps_navigation"
        fab:fab_colorNormal="@color/brand"
        fab:fab_colorPressed="@color/brandDark" />



    <team3m.dulwichoutdoorgallery.LocationCardView
        android:id="@+id/cardA"
        android:visibility="gone"
        android:layout_gravity="bottom|left"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp">

        </team3m.dulwichoutdoorgallery.LocationCardView>



    <team3m.dulwichoutdoorgallery.LocationCardView
        android:id="@+id/cardC"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|right"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp">
    </team3m.dulwichoutdoorgallery.LocationCardView>

    <team3m.dulwichoutdoorgallery.LocationCardView
        android:id="@+id/cardB"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|right"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp">



    </team3m.dulwichoutdoorgallery.LocationCardView>

    <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="wrap_content"
                android:layout_height="150dp">

            </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="180dp"></FrameLayout>
</FrameLayout>
