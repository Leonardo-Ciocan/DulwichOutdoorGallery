<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team3m.dulwichoutdoorgallery.CoreActivity">

    <android.support.v7.widget.Toolbar

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/toolbar"
        android:background="@color/brandDark"

        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <EditText
            android:lines="1"
            android:id="@+id/search"
            android:visibility="gone"
            android:textColor="#fff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="Search art"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
       <FrameLayout

           android:id="@+id/contentHolder"
            android:background="#fff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

       </FrameLayout>

       <LinearLayout
           android:id="@+id/buttonHolder"
           android:orientation="vertical"
           android:layout_width="240dp"
           android:layout_height="fill_parent"
           android:layout_gravity="start"
           android:background="#fff">

           <LinearLayout
               android:id="@+id/btn_explore"
               android:background="@color/brand"
               android:layout_width="fill_parent"
               android:layout_height="50dp">
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/explore_light"
                   android:layout_marginTop="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical"
                   android:textSize="8.5pt"
                   android:textColor="#fff"
                   android:text="Explore"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/btn_route"
               android:layout_width="fill_parent"
               android:layout_height="50dp">
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/route_dark"
                   android:layout_marginTop="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <TextView
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical"
                   android:textSize="8.5pt"
                   android:textColor="#bf000000"
                   android:text="Route"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/btn_badges"
               android:layout_width="fill_parent"
               android:layout_height="50dp">
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/badges_dark"
                   android:layout_marginTop="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />

               <TextView
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical"
                   android:textSize="8.5pt"
                   android:textColor="#bf000000"
                   android:text="Badges"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/btn_game"
               android:layout_width="fill_parent"
               android:layout_height="50dp">
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/game_dark"
                   android:layout_marginTop="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />

               <TextView
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical"
                   android:textSize="8.5pt"
                   android:textColor="#bf000000"
                   android:text="Quiz"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/btn_about"
               android:layout_width="fill_parent"
               android:layout_height="50dp">
               <ImageView
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/about_dark"
                   android:layout_marginTop="5dp"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />

               <TextView
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical"
                   android:textSize="8.5pt"
                   android:textColor="#bf000000"
                   android:text="About"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
           </LinearLayout>


